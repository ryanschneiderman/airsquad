function getPlayerCourtWidth(){
	var x = window.matchMedia("(max-device-width : 1024px) and (max-device-width : 1024px) and (orientation : portrait)")
	if (x.matches){
		return $(window).width()*.55
	}
	else return $(window).width()*.4
}

