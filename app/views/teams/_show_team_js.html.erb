	}

	function convert_date_string(str){
		var text = str.text()
		var split = text.split(/[\s, ]+/);
		if(split[0] == "less"){
			var return_word = str.text()
		}
		else{
			var arr_len = split.length
			for(var i = 0; i < arr_len; i++){
				if(parseInt(split[i])){
					var return_word = split[i] + split[i+1][0]
				}
			}
		}
		return return_word
	}
	

