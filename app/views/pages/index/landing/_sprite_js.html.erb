<script>
	var row = 0;
	var col = 0;
	var startingTop = 0;
	var startingLeft = 0;
	var ypos = -3;
	var xpos = 1;
    var move_count = 0;
    var curr_pos = null;
    var curr_diff = 0;

	function calc_ypos(){
		return (row * -744) - 3
	}

	function calc_xpos(){
		return (col * -1276) + 1
	}



		

	$("#sprite").mousemove(function(event) {
		if(curr_pos!= null){
			x_diff = Math.abs(curr_pos.x - event.clientX)
			y_diff = Math.abs(curr_pos.y - event.clientY)
			curr_diff += x_diff + y_diff;
		}
		curr_pos = {x: event.clientX, y: event.clientY}

		if(curr_diff > 25){
			row++;
			if(row  > 7){
				col++;
				row = 0;
			}
			if(col > 5 && row > 4){
				row = 0;
				col = 0;
			}
			$('#sprite').css("backgroundPosition", calc_xpos().toString() + "px " + calc_ypos().toString() + "px"); 
			curr_diff = 0;
		}
		//move_count++; 
	});

	$("#grey-canvas")
	.mouseenter(function(e){
		startingTop = e.clientY;
		startingLeft = e.clientX;
		isInCanvas = true;
	})
	.mouseleave(function(e){
		isInCanvas = false;
	});
		
</script>